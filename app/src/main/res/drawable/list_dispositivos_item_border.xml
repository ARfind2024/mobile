<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/whiteArfind" /> <!-- Cambia el color de fondo aquí -->
        </shape>
    </item>
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/whiteArfind" /> <!-- Transparente -->
            <stroke
                android:width="1dp"
                android:color="@color/blueArfind" /> <!-- Cambia el color del borde aquí -->
        </shape>
    </item>
</layer-list>


