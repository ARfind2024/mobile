<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.ConfirmationCodeActivity"
    android:background="@color/whiteArfind">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/blueArfind"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <TextView
            android:id="@+id/txt_titulo_verification_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope_extrabold"
            android:text="Codigo de verficacion"
            android:textAlignment="center"
            android:textColor="@color/blackIcon"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_subtitulo_verification_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:padding="16dp"
            android:text="Por favor escribe el codigo de verficacion que te hemos enviado a"
            android:textAlignment="center"
            android:textColor="@color/blackIcon"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/card_border_xs"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"

                android:autofillHints=""
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:hint=" "
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/blackIcon"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:autofillHints=""
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:hint=" "
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/blackIcon"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:hint=" "
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/blackIcon"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:hint=" "
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/blackIcon"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:hint=" "
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/blackIcon"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:hint=" "
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/blackIcon"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnVerificarCodePass"
            style="@style/BlueButtonArfind"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope_extrabold"
            android:text="Verificar"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_error_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_extrabold"
            android:textColor="@color/blueArfind"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>