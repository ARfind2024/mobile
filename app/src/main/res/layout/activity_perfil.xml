<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueArfind"
    tools:context=".PerfilActivity">


    <LinearLayout
        android:id="@+id/txtCerrarSesion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:background="@color/whiteArfind"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/ctnPerfilDetail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">


            <ImageView
                android:id="@+id/icono_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                app:srcCompat="@drawable/ic_user" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_regular"
                android:text="Perfil"
                android:textColor="#CC000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_next_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_regular"
                android:text=">"
                android:textColor="@color/blueArfind"
                android:textSize="12sp"
                tools:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_configuracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Comnfiguracion"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ctnTc"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">


            <ImageView
                android:id="@+id/icono_terminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:padding="1dp"
                app:srcCompat="@drawable/ic_terminos"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/txt_terminos_condiciones"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_regular"
                android:text="Terminos y condiciones"
                android:textSize="20sp"
                tools:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ctnPreguntas"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_background"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">


            <ImageView
                android:id="@+id/icono_terminos_eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                app:srcCompat="@drawable/ic_pregunta"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/txt_preguntas"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_regular"
                android:text="Preguntas"
                android:textSize="20sp"
                tools:textColor="@color/black" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtCerrarSesion1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Cerrar sesion"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctnBackProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/blueArfind"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/txtCerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn_profile"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/whiteArfind"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>